{% block class_body %}
    /**
     * {@inheritdoc}
     */
    public function getConfigTreeBuilder()
    {
        $treeBuilder = new TreeBuilder();
        $rootNode = $treeBuilder->root('smile_ez_site_builder');

        $rootNode
            ->children()
                ->booleanNode('installed')
                ->defaultTrue()
            ->end()
        ->end();

        return $treeBuilder;
    }
